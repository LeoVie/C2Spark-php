{
    "name": "leovie/c2spark",
    "type": "project",
    "authors": [
        {
            "name": "Leo Viezens",
            "email": "leo.viezens@web.de"
        }
    ],
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true
    },
    "require": {
        "thecodingmachine/safe": "^1.1"
    },
    "require-dev": {
        "infection/infection": "^0.16.2",
        "phpstan/phpstan": "^0.12.18",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "LeoVie\\C2Spark\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LeoVie\\C2Spark\\Test\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": [
            "phpstan analyse -c build/config/phpstan.neon"
        ],
        "phpunit": [
            "phpunit -c build/config/phpunit.xml Tests"
        ],
        "infection": [
            "infection --only-covered --configuration=build/config/infection.json --min-msi=80 --min-covered-msi=80 --coverage=build/coverage --threads=4"
        ],
        "test": [
            "@phpstan",
            "@phpunit",
            "@infection"
        ]
    }
}
